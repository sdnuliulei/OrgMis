@{
    ViewBag.Title = "权限管理";
    Layout = "~/Views/Shared/Content_Layout.cshtml";
}
	<div class="easyui-layout" style="width:100%;height:100%;">
		<div data-options="region:'west',split:true" title="权限类别" style="width:150px;">
             <div style="padding:0px;background:#EFEFEF;width:auto;margin:0 0 0 0;height:30px">
             </div>
             <div>
                <ul id="content">
                 </ul>
             </div>
        </div>
		<div data-options="region:'center',title:'权限管理'">
            <table id="dg" class="easyui-datagrid" style="width:100%;margin:0px"
                    url="@Url.Action("Index",new {page=1,rows=10,RTID=0})"
                    toolbar="#toolbar" pagination="true"
                    rownumbers="true" fitColumns="true" singleSelect="true">
                <thead>
                    <tr>
                        <th field="ck" checkbox="true"></th>
                        <th field="RID" hidden="true">编号</th>
                        <th field="RightName" width="50">权限名称</th>
                        <th field="UniqueFlag" width="50">标识</th>
                    </tr>
                </thead>
            </table>
            <div id="toolbar">
                <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" id="add_">新建</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" id="edit_">编辑</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" id="delete_">删除</a>
            </div>
		</div>
	</div>
    
    <div id="dlg" class="easyui-dialog" style="width:400px;height:280px;padding:10px 20px"
            closed="true" buttons="#dlg-buttons">
        <div class="ftitle">权限管理</div>
        <form id="fm" class="fm" method="post" novalidate>
            <div class="fitem">
                <label>权限类别:</label>
                <select id="RTID" name="RTID">
                </select>
            </div>
            <div class="fitem">
                <label>权限名称:</label>
                @Html.TextBox("RightName", "", new { type="text",required=true,@class="easyui-textbox"})
            </div>
            <div class="fitem">
                <label>标识:</label>
                @Html.TextBox("UniqueFlag","",new {type="text",required=true,@class="easyui-textbox"})
            </div>
        </form>
    </div>
    <div id="dlg-buttons">
        <a href="javascript:void(0)" class="easyui-linkbutton c6" iconCls="icon-ok" id="btn_Confirm_" style="width:95px">确定</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')" style="width:90px">取消</a>
    </div>
    <script type="text/javascript" src="/js/viewjs/rights.js"></script>


